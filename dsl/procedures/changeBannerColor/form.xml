<editor>
  <formElement>
    <label>Color</label>
    <property>color</property>
    <documentation>Choose the color of your banner</documentation>
    <type>select</type>
    <required>1</required>
    <option>
      <name>Red</name>
      <value>Red</value>
    </option>
    <option>
      <name>Orange</name>
      <value>Orange</value>
    </option>
    <option>
      <name>Pink</name>
      <value>Pink</value>
    </option>
    <option>
      <name>Green</name>
      <value>Green</value>
    </option>
    <option>
      <name>Purple</name>
      <value>Purple</value>
    </option>
    <option>
      <name>Yellow</name>
      <value>Yellow</value>
    </option>
    <option>
      <name>Default</name>
      <value>Default</value>
    </option>
    <value>Red</value>
  </formElement>

  <formElement>
    <label>Logo</label>
    <property>logo</property>
    <documentation>The logo to display on the top left corner.</documentation>
    <type>select</type>
    <required>0</required>
    <option>
      <name>default</name>
      <value>logo.png</value>
    </option>
    <value>logo.png</value>
  </formElement>

  <formElement>
       <label>Logo File</label>
       <property>logoFile</property>
       <documentation>The path on the Commander server to your personal logo to replace the default one. This value will overwrite the logo parameter if it's not blank</documentation>
       <type>entry</type>
       <value></value>
       <required>0</required>
   </formElement>

   <formElement>
        <label>Web resource</label>
        <property>webResource</property>
        <documentation>Name of the resource running on the webserver</documentation>
        <type>entry</type>
        <value>local</value>
        <required>0</required>
    </formElement>

</editor>
