<editor>
  <formElement>
      <label>Number of GBs</label>
      <property>numberOfGB</property>
      <documentation>Indicate the numbers of GB of data you can write in your workspace to test disk performance</documentation>
      <required>1</required>
      <type>select</type>
      <option>
          <name>1 GB</name>
          <value>1</value>
      </option>
      <option>
          <name>5 GB</name>
          <value>5</value>
      </option>
      <option>
          <name>10 GB</name>
          <value>10</value>
      </option>
      <option>
          <name>=20 GB</name>
          <value>20</value>
      </option>
      <value>1</value>
  </formElement>

  <formElement>
    <label>Number of Job Steps</label>
    <property>numberOfJobSteps</property>
    <documentation>The number of job steps to evaluate for the localUsage</documentation>
    <type>entry</type>
    <value>5000</value>
    <required>1</required>
  </formElement>

  <formElement>
    <label>Number of Steps</label>
    <property>numberOfSteps</property>
    <documentation>The number of steps to evaluate for the Database Performance</documentation>
    <type>entry</type>
    <value>500</value>
    <required>1</required>
  </formElement>

  <formElement>
      <label>Debug Mode</label>
      <property>debugMode</property>
      <documentation>Debug Mode</documentation>
      <type>checkbox</type>
      <checkedValue>1</checkedValue>
      <uncheckedValue>0</uncheckedValue>
      <initiallyChecked>0</initiallyChecked>
      <value>0</value>
  </formElement>
</editor>
